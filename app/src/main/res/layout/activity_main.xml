<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brunosantos.draganddrop.MainActivity">

    <com.example.brunosantos.draganddrop.CanvasView
        android:id="@+id/fl_container_screen"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fl_actions"/>

    <FrameLayout
        android:id="@+id/fl_actions"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fl_container_stamp_picker"
        android:paddingBottom="8dp"/>


    <FrameLayout
        android:id="@+id/fl_container_stamp_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_container_expanded"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>
